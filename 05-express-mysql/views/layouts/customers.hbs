{{#extends "base"}}
{{#block "content"}}

<h1>Customers</h1>
<table class="table">
 <form method="POST">
    <div class="mb-3">
        <label>First Name</label>
        <input type="text" class="form-control" name="first_name">
    </div>
    <div class="mb-3">
        <label>Last Name</label>
        <input type="text" class="form-control" name="last_name">
    </div>
    <div class="mb-3">
        <label>Rating</label>
        <input type="text" class="form-control" name="rating">
    </div>
    <div class="mb-3">
        <label>Company</label>
        <select name="comapny_id" class="form-control">
            {{#each companies}}
            <option value="{{this.company_id}}">{{this.name}}</option>
        </select>
    {{#each customer}}
    <tr>
        <td>{{this.first_name}}</td>
        <td>{{this.last_name}}</td>
        <td>{{this.rating}}</td>
        <td>{{this.name}}</td>
    </tr>
    {{/each}}
</table>
<button type="submit" class="btn btn-primary">Add Customer</button>
</form>

 </div>
{{/block}}
{{/extends}}